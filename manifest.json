{
    "name": "TodoExtension",
    "version": "1.0",
    "description": "Yet Another Todo Extension For Good",
    "author": "Kadir Avci",
    "manifest_version": 2,
    "background": {
        "scripts": ["js/main.js"],
        "persistent": false
    },
    "permissions": [
        "background",
        "tabs",
        "storage",
        "http://*/*",
        "https://*/*"
    ],
    "browser_action": {
        "default_popup": "index.html",
        "default_title": "Yet Another Todo Extension for Good!!!",
        "default_icon": {
            "128": "img/list-128.png"
        }
    },
    "icons": {
        "128": "img/list-128.png"
    }
}
